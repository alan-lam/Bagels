                android:text="@string/five" />

            <TextView
                android:id="@+id/hint_five"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/guess_ten"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/ten" />

            <TextView
                android:id="@+id/hint_ten"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="" />

        </LinearLayout>

    </GridLayout>

    <TextView
        android:id="@+id/actual_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:textAlignment="center"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:rowCount="2"
        android:columnCount="6">

        <Button
            android:text="@string/key_zero"
            android:tag="0"
            android:onClick="onClick"
            android:layout_width="0dp"
            android:layout_columnWeight="1"/>

        <Button
            android:text="@string/key_one"
            android:tag="1"
            android:onClick="onClick"
            android:layout_width="0dp"
            android:layout_columnWeight="1"/>

        <Button
            android:text="@string/key_two"
            android:tag="2"
            android:onClick="onClick"
            android:layout_width="0dp"
            android:layout_columnWeight="1"/>

        <Button
            android:text="@string/key_three"
            android:tag="3"
            android:onClick="onClick"
            android:layout_width="0dp"
            android:layout_columnWeight="1"/>

