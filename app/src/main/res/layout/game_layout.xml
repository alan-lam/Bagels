            android:layout_width="0dp"
            android:layout_columnWeight="1"/>

        <Button
            android:text="@string/key_seven"
            android:tag="7"
            android:onClick="onClick"
            android:layout_width="0dp"
            android:layout_columnWeight="1"/>

        <Button
            android:text="@string/key_eight"
            android:tag="8"
            android:onClick="onClick"
            android:layout_width="0dp"
            android:layout_columnWeight="1"/>

        <Button
            android:text="@string/key_nine"
            android:tag="9"
            android:onClick="onClick"
            android:layout_width="0dp"
            android:layout_columnWeight="1"/>

        <Button
            android:text="@string/key_check"
            android:tag="check"
            android:onClick="onClick"
            android:layout_width="0dp"
            android:layout_columnWeight="1"/>

    </GridLayout>

</LinearLayout>