            android:layout_width="0dp"
            android:layout_columnWeight="1"/>

        <Button
            android:text="@string/key_delete"
            android:tag="delete"
            android:onClick="onClick"
            android:layout_width="0dp"
            android:layout_columnWeight="1"/>

        <Button
            android:text="@string/key_five"
